@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
  <base href="~/" />
  <meta charset="utf-8" />
  <title>Sample Core - @ViewBag.Title</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel='shortcut icon' type='image/x-icon' href='~/images/favicon.ico' />
  <script src="~/app.js" asp-append-version="true"></script>
</head>
<body>
  <div id="header"></div>
  <script>sampleApp.loadHeader()</script>

  <div id="root">
    @RenderBody()
  </div>

  <div id="footer"></div>
  <script>sampleApp.loadFooter()</script>
</body>
</html>
