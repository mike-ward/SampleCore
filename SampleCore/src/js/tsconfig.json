{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "preserveConstEnums": true,
    "outDir": "./build/",
    "sourceMap": true,
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "lib": [
    "es2015.promise"
  ],
  "resolve": {
    "extensions": [ ".tsx", ".ts" ]
  }
}